{
    "compilerOptions": {
        "esModuleInterop": true,
        "sourceMap": true,
        "lib": [
            "ES2020",
            "DOM"
        ],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "Node",
        "target": "es5",
        "strict": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@hooks/*": [
                "client/hooks/*"
            ],
            "@components/*": [
                "client/components/*"
            ],
            "@layouts/*": [
                "client/layouts/*"
            ],
            "@pages/*": [
                "client/pages/*"
            ],
            "@utils/*": [
                "client/utils/*"
            ],
            "@typings/*": [
                "client/typings/*"
            ]
        }
    }
}